@model PersonalWebsite.Models.Profile.SkillsViewModel

@*<p class="skills">Conhecimento primário</p>*@
@foreach (var skill in Model.PrimarySkills)
{
    var width = "width" + skill.Value;
    <div class="progress small twelve">
        <span class="meter has-tip tip-right @width" data-width="280" title="@skill.Description">@skill.Title</span>
    </div>    
}

@*<p class="skills">Conhecimento secundário</p>*@
@foreach (var skill in Model.SecondarySkills)
{
    var width = "width" + skill.Value;
    <div class="progress secondary small twelve">
        <span class="meter has-tip tip-right @width" data-width="280" title="@skill.Description">@skill.Title</span>
    </div>            
}