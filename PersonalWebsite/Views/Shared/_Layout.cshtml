@{
    /* This should make clients update the CSS files every day, 
     * meaning that any changes are actually seen */
    ViewBag.RefreshToken = DateTime.Now.ToString("dd-MM-yy");
}<!DOCTYPE html>

<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Thiago Vinícius Vieira - @ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/images/favicon.ico">

    <script src="~/Content/javascripts/foundation-stub.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Content/javascripts/jquery.foundation.tooltips.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Content/javascripts/foundation-app.js" type="text/javascript" charset="utf-8"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Content/javascripts/tag-it.js" type="text/javascript" charset="utf-8"></script>

    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/foundation.css?r=@ViewBag.RefreshToken" media="all">    
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/app.css?r=@ViewBag.RefreshToken" media="all">
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/prettify.css?r=@ViewBag.RefreshToken" media="all">
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/jquery.tagit.css?r=@ViewBag.RefreshToken" media="all">
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/tagit.ui-zendesk.css?r=@ViewBag.RefreshToken" media="all">
    <link rel="stylesheet" type="text/css" href="~/Content/stylesheets/iconic_fill.css?r=@ViewBag.RefreshToken" media="all">    
</head>
<body>

    <div class="header">
        <div class="row">
            <div class="four columns">
                <h1>Thiago Vinícius Vieira<br><small>C#, ASP.NET, MVC, SQL, HTML, CSS, JS</small></h1>            
            </div>
            <div class="eight columns">
                @Html.Partial("_NavigationPartial")
            </div>
        </div>
    </div>

    @if (EasyAuth.Authentication.IsAuthenticated())
    {
        @Html.Partial("_AdminPartial")
    }

    <!-- bet you haven't seen one of these since 2004! -->
    <div class="spacer"></div>

    @RenderBody()
    
    @Html.Partial("_PiPartial")    

    <script src="/Content/javascripts/prettify/prettify.js" type="text/javascript" charset="utf-8"></script>
    <script src="/Content/javascripts/auto-prettify.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
        /* PrettyPrint */
        $(function () {
            styleCode();
        });

        /* Disqus */
        var disqus_shortname = 'thvvieira';

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function () {
            var s = document.createElement('script'); s.async = true;
            s.type = 'text/javascript';
            s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
            (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
        }());

        /* Google Analytics */
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-41485800-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</body>
</html>